{
  "builds": [
    {
      "src": "frontend/front/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/front/build/index.html"
    }
  ],
  "installCommand": "npm install --prefix frontend/front && npm install --prefix backend"
}
